{% trans_default_domain 'FOSUserBundle' %}

<div class="well">
<center>
<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST"  class="form-profile-edit" role="form">
    {{ form_errors(form) }}
    {% if not form.username.vars.valid %}{% set class_username_error = ' has-error' %}{% else %}{% set class_username_error = '' %}{% endif %}
    <div class="form-group{{ class_username_error }}">
        {{ form_label(form.username, null, {'label_attr': {'class': 'sr-only'}}) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans }}) }}
        {{ form_errors(form.username) }}
    </div>
    {% if not form.email.vars.valid %}{% set class_email_error = ' has-error' %}{% else %}{% set class_email_error = '' %}{% endif %}
    <div class="form-group{{ class_email_error }}">
        {{ form_label(form.email, null, {'label_attr': {'class': 'sr-only'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans }}) }}
        {{ form_errors(form.email) }}
    </div>
    {% if not form.current_password.vars.valid %}{% set class_password_error = ' has-error' %}{% else %}{% set class_password_error = '' %}{% endif %}
    <div class="form-group{{ class_password_error }}">
        {{ form_label(form.current_password, null, {'label_attr': {'class': 'sr-only'}}) }}
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans }}) }}
        {{ form_errors(form.current_password) }}
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit">{{ 'profile.edit.submit'|trans }}</button>
    {{ form_end(form) }}
</form>
</center>
</div>