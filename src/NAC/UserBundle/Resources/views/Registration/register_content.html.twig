{% trans_default_domain 'FOSUserBundle' %}

<div class="well">
<center>
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-register" role="form">
		{{ form_errors(form) }}
		{% if not form.email.vars.valid %}{% set class_email_error = ' has-error' %}{% else %}{% set class_email_error = '' %}{% endif %}
		<div class="form-group{{ class_email_error }}">
			{{ form_label(form.email, null, {'label_attr': {'class': 'sr-only'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans }}) }}
			{{ form_errors(form.email) }}
		</div>
		{% if not form.username.vars.valid %}{% set class_username_error = ' has-error' %}{% else %}{% set class_username_error = '' %}{% endif %}
		<div class="form-group{{ class_username_error }}">
			{{ form_label(form.username, null, {'label_attr': {'class': 'sr-only'}}) }}
			{{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans }}) }}
			{{ form_errors(form.username) }}
		</div>
		{% if not form.plainPassword.first.vars.valid %}{% set class_plainPassword_first_error = ' has-error' %}{% else %}{% set class_plainPassword_first_error = '' %}{% endif %}
		<div class="form-group{{ class_plainPassword_first_error }}">
			{{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'sr-only'}}) }}
			{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans }}) }}
			{{ form_errors(form.plainPassword.first) }}
		</div>
		{% if not form.plainPassword.second.vars.valid %}{% set class_plainPassword_second_error = ' has-error' %}{% else %}{% set class_plainPassword_second_error = '' %}{% endif %}
		<div class="form-group{{ class_plainPassword_second_error }}">
			{{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'sr-only'}}) }}
			{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans }}) }}
			{{ form_errors(form.plainPassword.second) }}
		</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit">{{ 'registration.submit'|trans }}</button>
		{{ form_end(form) }}
	</form>
</center>
</div>