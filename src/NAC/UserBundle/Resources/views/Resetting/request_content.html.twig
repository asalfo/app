{% trans_default_domain 'FOSUserBundle' %}

<div class="well">
<center>
	<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form_resetting_request">
		<div class="form-group">
			{% if invalid_username is defined %}
				<p class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
			{% endif %}
			<label class="sr-only" for="username">{{ 'resetting.request.username'|trans }}</label>
			<input class="form-control" type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}" />
		</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit">{{ 'resetting.request.submit'|trans }}</button>
	</form>
</center>
</div>