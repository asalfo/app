{# src/NAC/JobBundle/Resources/views/Job/index.html.twig #}

{% extends "NACJobBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block nacjob_body %}
  
    {% for job in listJobs %}
      <div class="panel panel-default">
	  <div class="panel-heading">
		<h3 class="panel-title">
		  <a href="{{ path('job_jobplatform_view', {'id': job.id}) }}">
			 {{ job.title }}  <span class="badge"> @ {{ job.author }} | {{ job.localite }}</span>	
		  </a>
		</h3>
	  </div>
	  <div class="panel-body">
		{{ job.content }}
		<a href="{{ path('job_jobplatform_view', {'id': job.id}) }}"> Détaille de l'offre: {{ job.title }}</a>
		
			
	  </div>
	</div>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  
  
    

  <ul class="pagination">
	  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
	  {% for p in range(1, nbPages) %}
		<li{% if p == page %} class="active"{% endif %}>
		  <a href="{{ path('nac_platform_home', {'page': p}) }}">{{ p }}</a>
		</li>
	  {% endfor %}
  </ul>
  
{% endblock %}