{# src/NAC/PropectBundle/Resources/views/Prospect/form.html.twig #}


{# On laisse vide la vue pour l'instant, on la comblera plus tard
   lorsqu'on saura afficher un formulaire. #}

<div class="well">
  
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
   <legend>Modifier un propect</legend>
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
      {# Génération du label. #}
      {{ form_label(form.titre, "Nom Société:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

      {# Affichage des erreurs pour ce champ précis. #}
      {{ form_errors(form.titre) }}

      <div class="col-lg-8">
        {# Génération de l'input. #}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

	 
	{# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.domaines, "Domaine d'activité:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
      {{ form_errors(form.domaines) }}
      <div class="col-sm-8">
        {{ form_widget(form.domaines, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
	
	{# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.localite, "Siège social:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
      {{ form_errors(form.localite) }}
      <div class="col-sm-8">
        {{ form_widget(form.localite, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
	
	{# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.tel, "Tél.:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
      {{ form_errors(form.tel) }}
      <div class="col-sm-8">
        {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
	
	{# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.email, "E-mail:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
      {{ form_errors(form.email) }}
      <div class="col-sm-8">
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
	
	{# Idem pour un autre champ. #}
    <div class="form-group">
	
      {{ form_label(form.resume, "Bref description:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
      {{ form_errors(form.resume) }}
      <div class="col-sm-8">
        {{ form_widget(form.resume, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
	
    {# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.content, "Présentationé détaillée:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
      {{ form_errors(form.content) }}
      <div class="col-sm-8">
        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
	
	
   
    
	
  
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  
  </fieldset>
  {{ form_end(form) }}
  
</div>